                <div class="page-header">
                    <h3>Registrese</h3>
                </div>
                <form role="form" action="registro" method="post">
                    {% if message is defined %}
                    <div class="form-group">
                        <label class="error">{{ message }}</label>
                    </div>
                    {% endif %}
                    {% if success is not defined %}
                        <div class="form-group">
                            <label for="username">Usuario</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Introduzca su usuario" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Correo</label>
                            <input type="email" class="form-control" id="email" name="email"  placeholder="Introduzca su email" required>
                        </div>
                        <hr />
                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    {% else %}
                        <div class="form-group">
                            <label>Usuario correctamente registrado</label><br />
                            <a href="{{ path('album_homepage') }}">Home</a>
                        </div>
                    {% endif %}
                </form>
            </div>
        </div>
       </div>
    </div>
