{% block body %}
    <div class="row">
        <div class="col-md-7">

        </div>


        <div class="col-md-5">
            <div class="panel panel-default">
            <div class="panel-body">
                <div class="page-header">
                    <h3>Cambiar contraseña</h3>
                </div>
                <form role="form" action="edit" method="post">
                    {% if message is defined %}
                    <div class="form-group">
                        <label class="error">{{ message }}</label>
                    </div>
                    {% endif %}
                    {% if success is not defined %}
                        <div class="form-group">
                            <label for="username">Usuario</label>
                            <input type="text" class="form-control" id="username" name="username" value="{{ user.username }}" disabled="disabled" required>
                        </div>
                        <div class="form-group">
                            <label for="oldpassword">Old Password</label>
                            <input type="password" class="form-control" id="oldpassword" name="oldpassword" placeholder="Old Password" required>
                        </div>
                        <div class="form-group">
                            <label for="newpassword">New Password</label>
                            <input type="password" class="form-control" id="newpassword" name="newpassword" placeholder="New Password" required>
                        </div>
                        <hr />
                        <button type="submit" class="btn btn-primary">Editar</button>
                    {% else %}
                        <div class="form-group">
                            <label>Password correctamente editado</label><br />
                            <a href="{{ path('user_homepage') }}">Home</a>
                        </div>
                    {% endif %}
                </form>
            </div>
        </div>
       </div>
        </div>
    </div>
{% endblock %}
